<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/icon_pawprint.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tinpet_Web.styles.css" asp-append-version="true" />
</head>
<body>
   <header>
        <nav class="navbar navbar-expand-lg bg-warning navbar-light fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/img/icon_pawprint_white.png" width="50" height="50" />
                </a>                
            </div>
        </nav>
   </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class=" text-center fixed-bottom" style="background-color:#ffff6c;">
        
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2)">
            © 2023 TINPET
            <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Nuestra política de privacidad</a>
        </div>
        <!-- Copyright -->

    </footer>
    <!-- Footer -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
