<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/icon_pawprint.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tinpet_Web.styles.css" asp-append-version="true" />
</head>
<body>
   <header>
        <nav class="navbar navbar-expand-lg bg-warning navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand " asp-controller="Home" asp-action="Index">
                    <img src="~/img/icon_pawprint_white.png" width="50" height="50"/>
                </a>
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-dark">
                <h1 style="font-family:'Abril Fatface'">T I N P E T</h1>
                </a>
            </div>
        </nav>
   </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="text-center bg-warning fixed-bottom">
      <a class="text-decoration-none text-dark" style="margin-right: 15px" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
      @*<a class="text-decoration-none text-dark" style="margin-right: 15px" asp-area="" asp-controller="Home" asp-action="Privacy">Accesibilidad</a>*@
        <a class="text-decoration-none text-dark" style="margin-right: 15px" href="https://github.com/Radanes7512/Tinpet_TFG/releases/download/1.0.0/tinpet-1.0.0.apk">Descargar</a>
      <a class="text-decoration-none text-dark" style="margin-right: 15px" href="https://github.com/Radanes7512/Tinpet_TFG">GitHub</a>
      <a class="text-decoration-none text-dark" asp-area="" asp-controller="Home" asp-action="About">Sobre nosotros</a>
      <br />
      <br />
      <p>
            © 2023 TINPET
      </p>
    </footer>
    <style>        
       .div1{
           border: 2px solid red
       }
       .div2{
           border: 2px solid blue
       }
       .div3{
           border: 2px solid black
       }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
